---
import SectionTitle from "./SectionTitle.astro";

const atributosData = [
  {
    id: 1,
    url: "/images/atributos/gym.webp",
    title: "Gimnasio al aire libre",
    icon: "/icons/gym.svg",
  },
  {
    id: 2,
    url: "/images/atributos/mini-golf.webp",
    title: "Mini golf",
    icon: "/icons/minigolf.svg",
  },
  {
    id: 3,
    url: "/images/atributos/fogateras.webp",
    title: "Fogateras",
    icon: "/icons/fogata.svg",
  },
  {
    id: 4,
    url: "/images/atributos/juegos-infantiles.webp",
    title: "Juegos Infantiles",
    icon: "/icons/parque.svg",
  },
];

const sitiosCercanosData = [
  {
    id: 1,
    title: "PLAYA",
    subtitle: "Farallones",
    url: "/images/sitios-cercanos/playa-farallones.webp",
  },
  {
    id: 2,
    title: "PLAYA",
    subtitle: "León Dormido",
    url: "/images/sitios-cercanos/playa-leon-dormido.webp",
  },
  {
    id: 3,
    title: "PLAYA",
    subtitle: "Chocalla",
    url: "/images/sitios-cercanos/playa-chocalla.webp",
  },
  {
    id: 4,
    title: "REAL CLUB",
    subtitle: "de Lima",
    url: "/images/sitios-cercanos/real-club.webp",
  },
  {
    id: 5,
    title: "BOULEVARD",
    subtitle: "de Asia",
    url: "/images/sitios-cercanos/boulevard.webp",
  },
];
---

<section aria-labelledby="atributos-title" data-aos="fade-up" data-aos-once="true">
  <main class="container mx-auto px-6 md:px-12">
    <!-- Title Section -->
    <header data-aos="fade-down" data-aos-delay="200" data-aos-once="true">
      <SectionTitle topText="ATRIBUTOS DEL" bottomText="CONDOMINIO" />
      <h2 id="atributos-title" class="sr-only">Atributos del Condominio Apolo</h2>
    </header>

    <section class="flex flex-col">
      <section 
        class="flex justify-around my-10 pt-0" 
        role="group" 
        aria-label="Características principales"
        data-aos="fade-up" data-aos-delay="400" data-aos-once="true"
      >
        <article 
          class="flex space-x-3 justify-center items-center group cursor-pointer"
          data-aos="fade-right" data-aos-delay="600" data-aos-once="true"
        >
          <img
            src="/icons/metraje.svg"
            alt="Icono de metraje"
            class="w-14 h-14 md:w-16 md:h-16 lg:w-24 lg:h-24 bg-white rounded-full p-2 transition-all duration-700 ease-out group-hover:scale-105 group-hover:rotate-3 group-hover:shadow-lg"
          />
          <data value="120" class="text-primary xl:text-2xl font-semibold transition-all duration-1000 ease-in-out group-hover:text-secondary">Desde <br /> 120 m2</data>
        </article>
        <article 
          class="flex space-x-3 justify-center items-center group cursor-pointer"
          data-aos="fade-left" data-aos-delay="600" data-aos-once="true"
        >
          <img
            src="/icons/parques-jardines.svg"
            alt="Icono de parques y jardines"
            class="w-14 h-14 md:w-16 md:h-26 lg:w-24 lg:h-24 font-semibold bg-white rounded-full p-2 transition-all duration-700 ease-out group-hover:scale-105 group-hover:rotate-3 group-hover:shadow-lg"
          />
          <p class="text-primary xl:text-2xl font-semibold transition-all duration-1000 ease-in-out group-hover:text-secondary">
            Parques <br /> y jardines
          </p>
        </article>
      </section>
      <section 
        class="grid grid-cols-1 lg:grid-cols-2 gap-4" 
        role="group" 
        aria-label="Atributos del condominio"
        data-aos="fade-up" data-aos-delay="300" data-aos-once="true"
      >
        {
          atributosData.map((item, index) => (
              <article 
                class="relative group"
                data-aos="flip-up" data-aos-delay={`${400 + (index * 100)}`} data-aos-once="true"
              >
                <figure class="overflow-hidden rounded-3xl shadow-lg mb-6 transition-all duration-700 ease-out hover:shadow-2xl hover:scale-102">
                  <header class="absolute top-0 left-0 right-0 bg-white/90 justify-center px-4 py-2 md:px-6 md:py-3 rounded-t-3xl shadow-lg flex items-center space-x-2 min-h-[60px] md:min-h-[70px] transition-all duration-500 ease-out group-hover:bg-white">
                    <img
                      src={item.icon}
                      alt={`Icono de ${item.title}`}
                      class="w-8 h-8 md:w-16 md:h-16 flex-shrink-0 transition-all duration-500 ease-out group-hover:scale-105 group-hover:rotate-2"
                    />
                    <h3 class="text-xl md:text-2xl text-secondary w-32 lg:text-2xl font-bold text-center leading-none transition-colors duration-500 ease-out group-hover:text-primary">
                      {item.title}
                    </h3>
                  </header>
                  <img
                    src={item.url}
                    alt={`Imagen de ${item.title} en el Condominio Apolo`}
                    class="w-full h-48 md:h-60 xl:h-[450px] transition-transform duration-700 ease-out group-hover:scale-105"
                    loading="lazy"
                    decoding="async"
                  />
                </figure>
              </article>
          ))
        }
      </section>
    </section>

    <aside class="flex flex-col">
      <header 
        class="flex justify-around my-10 pt-20"
        data-aos="fade-down" data-aos-delay="600" data-aos-once="true"
      >
        <img
          src="/images/sitios-cercanos/title.webp"
          alt="Sitios Cercanos al Condominio Apolo"
          class="w-80 md:w-96 lg:w-[500px] transition-transform duration-700 ease-out hover:scale-102"
        />
        <h3 class="sr-only">Sitios Cercanos al Condominio Apolo</h3>
      </header>

      <section class="grid  grid-cols-1 xl:grid-cols-3  gap-4" data-aos="fade-up" data-aos-delay="700" data-aos-once="true">
        {
          sitiosCercanosData.slice(0, 3).map((item, index) => (
            <article 
              class="mb-8 md:mb-12 lg:mb-16"
              data-aos="zoom-in" data-aos-delay={`${800 + (index * 100)}`} data-aos-once="true"
            >
              <figure class="relative group cursor-pointer">
                <!-- Stacked white layers behind the main card -->
                <aside 
                  class="absolute inset-0 -rotate-4 translate-x-2 translate-y-2 bg-white rounded-2xl shadow-md z-0 transition-all duration-700 ease-out group-hover:-rotate-1 group-hover:translate-x-1 group-hover:translate-y-1" 
                  aria-hidden="true"
                ></aside>

                <!-- Main image card -->
                <section class="relative overflow-visible border-8 border-white rounded-2xl shadow-xl mb-6 z-10 -rotate-1 transition-all duration-700 ease-out group-hover:rotate-0 group-hover:scale-102">
                  <!-- Top label -->
                  <header class="absolute -top-5 left-1/2 -translate-x-1/2 px-2 md:px-3 z-20">
                    <h4 class="uppercase text-2xl font-extrabold text-secondary text-center whitespace-nowrap rounded-xl px-3 md:px-5 py-1.5 md:py-2 text-outline-white transition-colors duration-500 ease-out group-hover:text-primary">
                      {item.title}
                    </h4>
                  </header>

                  <img
                    src={item.url}
                    alt={`${item.title} ${item.subtitle} cerca del Condominio Apolo`}
                    class="w-full h-48 md:h-60 lg:h-72 object-cover rounded-2xl transition-transform duration-700 ease-out group-hover:scale-105"
                    loading="lazy"
                    decoding="async"
                  />

                  <!-- Bottom label -->
                  <footer class="absolute -bottom-4 left-1/2 -translate-x-1/2 px-2 md:px-3 z-20">
                    <h5 class="uppercase text-2xl font-extrabold text-primary text-center whitespace-nowrap rounded-xl px-3 md:px-5 py-1.5 md:py-2 text-outline-white transition-colors duration-500 ease-out group-hover:text-secondary">
                      {item.subtitle}
                    </h5>
                  </footer>
                </section>
              </figure>
            </article>
          ))
        }
      </section>
      
        <section class="grid grid-cols-1 xl:grid-cols-2 gap-4 " data-aos="fade-up" data-aos-delay="1100" data-aos-once="true">
          {
            sitiosCercanosData.slice(3).map((item, index) => (
              <article 
                class="mb-8 md:mb-12 lg:mb-16 "
                data-aos="zoom-in" data-aos-delay={`${1200 + (index * 100)}`} data-aos-once="true"
              >
                <figure class="relative group cursor-pointer">
                  <!-- Stacked white layers behind the main card -->
                  <aside 
                    class="absolute inset-0 -rotate-4 translate-x-2 translate-y-2 bg-white rounded-2xl shadow-md z-0 transition-all duration-700 ease-out group-hover:-rotate-1 group-hover:translate-x-1 group-hover:translate-y-1" 
                    aria-hidden="true"
                  ></aside>

                  <!-- Main image card -->
                  <section class="relative overflow-visible border-8 border-white rounded-2xl shadow-xl mb-6 z-10 -rotate-1 transition-all duration-700 ease-out group-hover:rotate-0 group-hover:scale-102">
                    <!-- Top label -->
                    <header class="absolute -top-5 left-1/2 -translate-x-1/2 px-2 md:px-3 z-20">
                      <h4 class="uppercase text-2xl font-extrabold text-secondary text-center whitespace-nowrap rounded-xl px-3 md:px-5 py-1.5 md:py-2 text-outline-white transition-colors duration-500 ease-out group-hover:text-primary">
                        {item.title}
                      </h4>
                    </header>

                    <img
                      src={item.url}
                      alt={`${item.title} ${item.subtitle} cerca del Condominio Apolo`}
                      class="w-full h-48 md:h-60 lg:h-72 object-cover rounded-2xl transition-transform duration-700 ease-out group-hover:scale-105"
                      loading="lazy"
                      decoding="async"
                    />

                    <!-- Bottom label -->
                    <footer class="absolute -bottom-4 left-1/2 -translate-x-1/2 px-2 md:px-3 z-20">
                      <h5 class="uppercase text-2xl font-extrabold text-primary text-center whitespace-nowrap rounded-xl px-3 md:px-5 py-1.5 md:py-2 text-outline-white transition-colors duration-500 ease-out group-hover:text-secondary">
                        {item.subtitle}
                      </h5>
                    </footer>
                  </section>
                </figure>
              </article>
            ))
          }
        </section>
    </aside>
  </main>
</section>
